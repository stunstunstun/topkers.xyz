{
  "name": "githubjobs",
  "private": true,
  "description": "üí¨ Talk is cheap, show me the your code üîç when u get a job!",
  "scripts": {
    "prebootstrap": "yarn install",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --parallel",
    "lint": "lerna run lint --parallel",
    "test": "lerna run test --ignore @githubjobs/app --parallel",
    "test:coverage": "lerna run coverage --parallel",
    "coverage": "run-s lint test:coverage",
    "lerna": "lerna",
    "precommit": "lint-staged",
    "start": "run-p start:server start:app",
    "start:server": "lerna run --scope @githubjobs/server start --stream",
    "start:app": "lerna run --scope @githubjobs/app start --stream",
    "now-build": "yarn bootstrap",
    "now-start": "lerna run --scope @githubjobs/server now-start --stream",
    "deploy": "run-p deploy:app deploy:server",
    "deploy:app": "lerna run --scope @githubjobs/app deploy --stream",
    "deploy:server": "now && sleep 60 && now alias && now rm githubjobs --safe --yes"
  },
  "dependencies": {
    "@githubjobs/config": "^1.0.0",
    "@githubjobs/domain": "^1.0.0",
    "@githubjobs/integration": "^1.0.0",
    "lerna": "^3.4.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "codecov": "^3.1.0",
    "eslint": "5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-react-app": "^3.0.4",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-import-resolver-node": "^0.3.2",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-flowtype": "^3.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lint-staged": "^8.0.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "prettier-eslint-cli": "^4.7.1"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "config"
    ],
    "nohoist": [
      "**/react-scripts",
      "**/react-scripts/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "homepage": "https://www.githubjobs.xyz/",
  "repository": "https://github.com/stunstunstun/githubjobs",
  "license": "MIT",
  "now": {
    "name": "githubjobs",
    "alias": "githubjobs.now.sh",
    "engines": {
      "node": "8.x.x"
    },
    "env": {
      "NODE_ENV": "production"
    },
    "files": ["config"]
  }
}
